<div class="crud">
    <h3>Đổi mật khẩu</h3>

    <form method="POST" action="/user/change-password">
        <div class="input">
            <label>Mật khẩu hiện tại:</label>
            <input type="password" name="currentPassword" required class="text-input" />
        </div>

        <div class="input">
            <label>Mật khẩu mới:</label>
            <input type="password" name="newPassword" required class="text-input" />
        </div>

        <div class="input">
            <label>Nhập lại mật khẩu mới:</label>
            <input type="password" name="confirmPassword" required class="text-input" />
        </div>

        <div class="add">
            <button type="submit">Cập nhật mật khẩu</button>
        </div>
    </form>
</div>